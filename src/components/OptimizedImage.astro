---
export interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  loading?: 'lazy' | 'eager';
  class?: string;
  fetchPriority?: 'high' | 'auto' | 'low';
}

const {
  src,
  alt,
  width,
  height,
  loading = 'lazy',
  class: className = '',
  fetchPriority = 'auto',
} = Astro.props;
---

<img
  src={src}
  alt={alt}
  width={width}
  height={height}
  loading={loading}
  decoding="async"
  fetchpriority={fetchPriority}
  class={className}
/>

<div class="img-fallback hidden">
  <slot>
    <div
      class:list={[
        'bg-secondary-100 flex items-center justify-center text-secondary-400',
        className,
      ]}
    >
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
        ></path>
      </svg>
    </div>
  </slot>
</div>

<script>
  const img = document.querySelector(
    'img[class*="' + (document.currentScript?.parentElement?.className || '') + '"]'
  ) as HTMLImageElement;
  img?.addEventListener('error', () => {
    const fallback = img.parentElement?.querySelector('.img-fallback') as HTMLElement;
    if (fallback) {
      fallback.classList.remove('hidden');
    }
    img.classList.add('hidden');
  });
</script>
