---
import type { Provider } from '../lib/supabase';

export interface Props {
  provider: Provider;
  showRank?: boolean;
}

const { provider, showRank = true } = Astro.props;

const stars = provider.rating ? Math.round(provider.rating) : 0;
---

<div class="provider-card group">
  <!-- Rank Badge -->
  {showRank && provider.rank && (
    <div class="absolute top-4 right-4 w-8 h-8 rounded-full bg-primary-600 text-white flex items-center justify-center text-sm font-bold">
      #{provider.rank}
    </div>
  )}

  <div class="flex flex-col h-full">
    <!-- Header -->
    <div class="flex items-start gap-4 mb-4">
      {provider.logo_url ? (
        <img
          src={provider.logo_url}
          alt={`${provider.name} logo`}
          class="w-12 h-12 rounded-lg object-contain bg-white border border-secondary-200"
          loading="lazy"
          decoding="async"
          width="48"
          height="48"
        />
      ) : (
        <div class="w-12 h-12 rounded-lg bg-primary-100 flex items-center justify-center">
          <span class="text-primary-600 font-bold text-lg">
            {provider.name.charAt(0)}
          </span>
        </div>
      )}

      <div class="flex-1 min-w-0">
        <h3 class="font-semibold text-secondary-900 group-hover:text-primary-600 transition-colors">
          {provider.name}
        </h3>

        {/* Rating */}
        {provider.rating && (
          <div class="flex items-center gap-1 mt-1">
            {[...Array(5)].map((_, i) => (
              <svg
                class:list={['w-4 h-4', i < stars ? 'text-yellow-400' : 'text-secondary-300']}
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
            <span class="text-sm text-secondary-600 ml-1">
              {provider.rating.toFixed(1)}
            </span>
          </div>
        )}
      </div>
    </div>

    <!-- Description -->
    {provider.description && (
      <p class="text-sm text-secondary-600 mb-4 line-clamp-3 flex-1">
        {provider.description}
      </p>
    )}

    <!-- Features -->
    {provider.features && Object.keys(provider.features).length > 0 && (
      <div class="mb-4">
        <div class="flex flex-wrap gap-2">
          {Object.entries(provider.features).slice(0, 4).map(([key, value]) => (
            <span class="badge-secondary">
              {typeof value === 'string' ? value : key}
            </span>
          ))}
        </div>
      </div>
    )}

    <!-- Pros/Cons Preview -->
    <div class="grid grid-cols-2 gap-4 mb-4 text-sm">
      {provider.pros && provider.pros.length > 0 && (
        <div>
          <div class="flex items-center gap-1 text-green-600 font-medium mb-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            Pros
          </div>
          <ul class="text-secondary-600 space-y-1">
            {provider.pros.slice(0, 2).map((pro) => (
              <li class="line-clamp-1">{pro}</li>
            ))}
          </ul>
        </div>
      )}

      {provider.cons && provider.cons.length > 0 && (
        <div>
          <div class="flex items-center gap-1 text-red-600 font-medium mb-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
            Cons
          </div>
          <ul class="text-secondary-600 space-y-1">
            {provider.cons.slice(0, 2).map((con) => (
              <li class="line-clamp-1">{con}</li>
            ))}
          </ul>
        </div>
      )}
    </div>

    <!-- Actions -->
    <div class="flex gap-3 mt-auto pt-4 border-t border-secondary-100">
      <a href={`/providers/${provider.slug}`} class="btn-secondary flex-1 text-center text-sm">
        Read Review
      </a>
      {provider.affiliate_url && (
        <a
          href={provider.affiliate_url}
          target="_blank"
          rel="noopener sponsored"
          class="btn-primary flex-1 text-center text-sm"
        >
          Visit Site
          <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
        </a>
      )}
    </div>
  </div>
</div>
