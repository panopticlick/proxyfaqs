---
import Base from '../layouts/Base.astro';
import { guides } from '../lib/guides';
import { getCategories, type Category } from '../lib/supabase';

let categories: Category[] = [];
try {
  categories = await getCategories();
} catch (error) {
  console.error('Error fetching categories:', error);
}
---

<Base
  title="Proxy Guides | ProxyFAQs"
  description="Comprehensive guides to help you master proxies, web scraping, and data collection."
>
  <section class="bg-gradient-to-b from-primary-50 via-white to-white py-16">
    <div class="container-custom text-center">
      <p class="badge-primary mx-auto w-fit mb-4">Guides</p>
      <h1 class="text-4xl md:text-5xl font-bold text-secondary-900 mb-4">Proxy Guides</h1>
      <p class="text-lg text-secondary-600 max-w-3xl mx-auto">
        Clear, practical guides to help you pick the right proxies, avoid blocks, and run reliable
        scraping pipelines.
      </p>
    </div>
  </section>

  <section class="py-12 bg-white">
    <div class="container-custom">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          guides.map((guide) => (
            <a href={`/guides/${guide.slug}`} class="card-hover group">
              <div class="flex items-center justify-between text-xs text-secondary-500 mb-2">
                <span class="badge-secondary">{guide.category}</span>
                <span>{guide.readingTime}</span>
              </div>
              <h2 class="text-xl font-semibold text-secondary-900 group-hover:text-primary-600 transition-colors mb-3">
                {guide.title}
              </h2>
              <p class="text-secondary-600 mb-4 line-clamp-3">{guide.description}</p>
              <span class="text-primary-600 font-medium">Read guide →</span>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-12 bg-secondary-50">
    <div class="container-custom">
      <div class="flex items-center justify-between mb-8 flex-wrap gap-4">
        <h2 class="text-2xl md:text-3xl font-bold text-secondary-900">Browse by Category</h2>
        <a href="/category" class="text-primary-600 font-medium"> View all categories → </a>
      </div>

      {
        categories && categories.length > 0 ? (
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
            {categories.map((category) => (
              <a
                href={`/category/${category.slug}`}
                class="card-hover flex items-center justify-between"
              >
                <div>
                  <h3 class="font-semibold text-secondary-900">{category.name}</h3>
                  <p class="text-sm text-secondary-600">{category.question_count || 0} questions</p>
                </div>
                <svg
                  class="w-5 h-5 text-secondary-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5l7 7-7 7"
                  />
                </svg>
              </a>
            ))}
          </div>
        ) : (
          <p class="text-secondary-600">Loading categories...</p>
        )
      }
    </div>
  </section>

  <section class="py-12 bg-white">
    <div class="container-custom">
      <div class="card bg-gradient-to-br from-primary-50 to-white">
        <div class="grid md:grid-cols-2 gap-6 items-center">
          <div>
            <h2 class="text-2xl md:text-3xl font-bold text-secondary-900 mb-3">
              Need a custom recommendation?
            </h2>
            <p class="text-secondary-600 mb-4">
              Ask our AI assistant for proxy recommendations based on your target site and volume.
            </p>
            <div class="flex flex-wrap gap-3">
              <a href="/search" class="btn-primary"> Search Questions </a>
              <a href="/use-cases" class="btn-secondary"> Browse Use Cases </a>
              <a href="/providers" class="btn-secondary"> Compare Providers </a>
            </div>
          </div>
          <div class="text-sm text-secondary-600">
            <ul class="space-y-2">
              <li>• Fast answers to proxy setup questions</li>
              <li>• Guidance on block troubleshooting</li>
              <li>• Tips for scraping workflows</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>
</Base>
