---
import Base from '../../layouts/Base.astro';
import QuestionCard from '../../components/QuestionCard.astro';
import { getPopularQuestions, getCategories } from '../../lib/supabase';

let questions: any[] = [];
let categories: any[] = [];

try {
  [questions, categories] = await Promise.all([
    getPopularQuestions(50),
    getCategories(),
  ]);
} catch (error) {
  console.error('Error fetching questions:', error);
}
---

<Base
  title="All Questions"
  description="Browse all proxy and web scraping questions. Find expert answers about residential proxies, datacenter proxies, scraping techniques, and more."
>
  <div class="bg-secondary-50 min-h-screen">
    <!-- Header -->
    <section class="bg-white border-b border-secondary-200 py-8">
      <div class="container-custom">
        <h1 class="text-2xl md:text-3xl font-bold text-secondary-900 mb-4">
          All Questions
        </h1>
        <p class="text-secondary-600">
          Browse {questions.length.toLocaleString()}+ questions about proxies and web scraping
        </p>
      </div>
    </section>

    <!-- Content -->
    <section class="py-8">
      <div class="container-custom">
        <div class="grid lg:grid-cols-4 gap-8">
          <!-- Sidebar - Categories -->
          <aside class="lg:col-span-1">
            <div class="sticky top-24">
              <h2 class="font-semibold text-secondary-900 mb-4">Categories</h2>
              <nav class="space-y-2">
                {categories.slice(0, 15).map((category) => (
                  <a
                    href={`/category/${category.slug}`}
                    class="block px-3 py-2 rounded-lg text-sm text-secondary-600 hover:bg-white hover:text-primary-600 transition-colors"
                  >
                    {category.name}
                    <span class="text-secondary-400 ml-1">
                      ({category.question_count?.toLocaleString() || 0})
                    </span>
                  </a>
                ))}
              </nav>
            </div>
          </aside>

          <!-- Main Content - Questions -->
          <main class="lg:col-span-3">
            <div class="grid gap-4">
              {questions.map((question) => (
                <QuestionCard question={question} />
              ))}
            </div>

            {questions.length === 0 && (
              <div class="text-center py-12">
                <p class="text-secondary-600">No questions found.</p>
              </div>
            )}
          </main>
        </div>
      </div>
    </section>
  </div>
</Base>
