---
export const prerender = true;

import Base from '../../layouts/Base.astro';
import { getProvider, getAllProviderSlugs, getProviders, type Provider } from '../../lib/supabase';
import { generateBreadcrumbSchema, generateProductSchema } from '../../lib/utils';
import { env } from '../../lib/env';

export async function getStaticPaths() {
  try {
    const slugs = await getAllProviderSlugs();
    return slugs.map((slug) => ({ params: { slug } }));
  } catch (error) {
    const message = error instanceof Error ? error.message : String(error);
    console.warn('Could not fetch provider slugs (database may not be set up yet):', message);
    return [];
  }
}

const { slug } = Astro.params;

let provider: Provider | null = null;
let otherProviders: Provider[] = [];

try {
  [provider, otherProviders] = await Promise.all([
    getProvider(slug),
    getProviders(),
  ]);
  otherProviders = otherProviders.filter(p => p.slug !== slug).slice(0, 4);
} catch (error) {
  console.error('Error fetching provider:', error);
}

if (!provider) {
  return Astro.redirect('/404');
}

const siteUrl = env.SITE;
const pageUrl = `${siteUrl}/providers/${slug}`;

const stars = provider.rating ? Math.round(provider.rating) : 0;

// Build price range from pricing data
const priceRange = provider.pricing?.starting_price
  ? `$${provider.pricing.starting_price}+`
  : undefined;

const jsonLd = [
  generateBreadcrumbSchema([
    { name: 'Home', url: siteUrl },
    { name: 'Providers', url: `${siteUrl}/providers` },
    { name: provider.name, url: pageUrl },
  ]),
  generateProductSchema({
    name: provider.name,
    description: provider.description || `${provider.name} proxy service review`,
    url: pageUrl,
    logo: provider.logo_url ?? undefined,
    rating: provider.rating ?? undefined,
    reviewCount: provider.review_count ?? undefined,
    priceRange,
  }),
  {
    '@context': 'https://schema.org',
    '@type': 'Review',
    itemReviewed: {
      '@type': 'Organization',
      name: provider.name,
    },
    author: {
      '@type': 'Organization',
      name: 'ProxyFAQs',
    },
    reviewRating: provider.rating ? {
      '@type': 'Rating',
      ratingValue: provider.rating,
      bestRating: 5,
    } : undefined,
    reviewBody: provider.description ?? '',
  },
];

const websiteHostname = provider.website_url
  ? (() => {
      try {
        return new URL(provider.website_url).hostname;
      } catch {
        return provider.website_url.replace(/^https?:\/\//, "");
      }
    })()
  : null;
---

<Base
  title={`${provider.name} Review`}
  description={provider.description || `Read our in-depth review of ${provider.name}. Compare features, pricing, pros and cons.`}
  canonicalUrl={pageUrl}
  jsonLd={jsonLd}
  ogType="product"
>
  <article class="py-8 md:py-12">
    <div class="container-custom">
      <!-- Breadcrumbs -->
      <nav class="mb-6" aria-label="Breadcrumb">
        <ol class="flex items-center gap-2 text-sm text-secondary-500">
          <li>
            <a href="/" class="hover:text-primary-600">Home</a>
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
            <a href="/providers" class="hover:text-primary-600">Providers</a>
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
            <span class="text-secondary-900">{provider.name}</span>
          </li>
        </ol>
      </nav>

      <div class="grid lg:grid-cols-3 gap-8">
        <!-- Main Content -->
        <main class="lg:col-span-2">
          <!-- Header Card -->
          <div class="card mb-8">
            <div class="flex flex-col md:flex-row md:items-center gap-6">
              <!-- Logo -->
              <div class="flex-shrink-0">
                {provider.logo_url ? (
                  <img
                    src={provider.logo_url}
                    alt={`${provider.name} logo`}
                    class="w-24 h-24 rounded-xl object-contain bg-white border border-secondary-200 p-2"
                    width="96"
                    height="96"
                    decoding="async"
                  />
                ) : (
                  <div class="w-24 h-24 rounded-xl bg-primary-100 flex items-center justify-center">
                    <span class="text-primary-600 font-bold text-3xl">
                      {provider.name.charAt(0)}
                    </span>
                  </div>
                )}
              </div>

              <!-- Info -->
              <div class="flex-1">
                <div class="flex items-center gap-3 mb-2">
                  {provider.rank && (
                    <span class="bg-primary-600 text-white text-sm font-bold px-3 py-1 rounded-full">
                      #{provider.rank} Provider
                    </span>
                  )}
                </div>

                <h1 class="text-2xl md:text-3xl font-bold text-secondary-900 mb-2">
                  {provider.name} Review
                </h1>

                {/* Rating */}
                {provider.rating && (
                  <div class="flex items-center gap-2 mb-3">
                    <div class="flex items-center gap-1">
                      {[...Array(5)].map((_, i) => (
                        <svg
                          class:list={['w-5 h-5', i < stars ? 'text-yellow-400' : 'text-secondary-300']}
                          fill="currentColor"
                          viewBox="0 0 20 20"
                        >
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                        </svg>
                      ))}
                    </div>
                    <span class="text-lg font-semibold text-secondary-900">
                      {provider.rating.toFixed(1)}
                    </span>
                    <span class="text-secondary-500">/ 5</span>
                  </div>
                )}

                {provider.description && (
                  <p class="text-secondary-600">{provider.description}</p>
                )}
              </div>
            </div>

            <!-- CTA Buttons -->
            <div class="flex flex-wrap gap-4 mt-6 pt-6 border-t border-secondary-200">
              {provider.affiliate_url && (
                <a
                  href={provider.affiliate_url}
                  target="_blank"
                  rel="noopener sponsored"
                  class="btn-primary"
                >
                  Visit {provider.name}
                  <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                </a>
              )}
              {provider.website_url && (
                <a
                  href={provider.website_url}
                  target="_blank"
                  rel="noopener"
                  class="btn-secondary"
                >
                  Official Website
                </a>
              )}
            </div>
          </div>

          <!-- Pros & Cons -->
          <div class="grid md:grid-cols-2 gap-6 mb-8">
            {provider.pros && provider.pros.length > 0 && (
              <div class="card">
                <h2 class="flex items-center gap-2 text-lg font-semibold text-green-700 mb-4">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  Pros
                </h2>
                <ul class="space-y-3">
                  {provider.pros.map((pro) => (
                    <li class="flex items-start gap-2 text-secondary-700">
                      <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                      {pro}
                    </li>
                  ))}
                </ul>
              </div>
            )}

            {provider.cons && provider.cons.length > 0 && (
              <div class="card">
                <h2 class="flex items-center gap-2 text-lg font-semibold text-red-700 mb-4">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  Cons
                </h2>
                <ul class="space-y-3">
                  {provider.cons.map((con) => (
                    <li class="flex items-start gap-2 text-secondary-700">
                      <svg class="w-5 h-5 text-red-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                      </svg>
                      {con}
                    </li>
                  ))}
                </ul>
              </div>
            )}
          </div>

          <!-- Features -->
          {provider.features && Object.keys(provider.features).length > 0 && (
            <div class="card mb-8">
              <h2 class="text-xl font-semibold text-secondary-900 mb-4">Features</h2>
              <div class="grid sm:grid-cols-2 gap-4">
                {Object.entries(provider.features).map(([key, value]) => (
                  <div class="flex items-start gap-3 p-3 rounded-lg bg-secondary-50">
                    <svg class="w-5 h-5 text-primary-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <div>
                      <span class="font-medium text-secondary-900">{key}</span>
                      {typeof value === 'string' && value !== 'true' && (
                        <span class="text-secondary-600 ml-2">{value}</span>
                      )}
                    </div>
                  </div>
                ))}
              </div>
            </div>
          )}

          <!-- Review Content -->
          {provider.review_html && (
            <div class="card">
              <h2 class="text-xl font-semibold text-secondary-900 mb-4">Full Review</h2>
              <div class="prose-custom" set:html={provider.review_html} />
            </div>
          )}
        </main>

        <!-- Sidebar -->
        <aside class="lg:col-span-1">
          <div class="sticky top-24 space-y-6">
            <!-- Quick Info -->
            <div class="card">
              <h2 class="font-semibold text-secondary-900 mb-4">Quick Info</h2>
              <dl class="space-y-3 text-sm">
                {provider.website_url && websiteHostname && (
                  <div class="flex justify-between">
                    <dt class="text-secondary-500">Website</dt>
                    <dd>
                      <a href={provider.website_url} target="_blank" rel="noopener" class="text-primary-600 hover:underline">
                        {websiteHostname}
                      </a>
                    </dd>
                  </div>
                )}
                {provider.pricing && Object.keys(provider.pricing).length > 0 && (
                  <div class="flex justify-between">
                    <dt class="text-secondary-500">Starting From</dt>
                    <dd class="font-medium text-secondary-900">
                      {provider.pricing.starting_price || 'Contact for pricing'}
                    </dd>
                  </div>
                )}
              </dl>
            </div>

            <!-- Other Providers -->
            <div class="card">
              <h2 class="font-semibold text-secondary-900 mb-4">Compare With</h2>
              <div class="space-y-3">
                {otherProviders.map((other) => (
                  <a
                    href={`/providers/${other.slug}`}
                    class="flex items-center gap-3 p-2 rounded-lg hover:bg-secondary-50 transition-colors"
                  >
                    {other.logo_url ? (
                      <img
                        src={other.logo_url}
                        alt={other.name}
                        class="w-8 h-8 rounded object-contain"
                        width="32"
                        height="32"
                        loading="lazy"
                        decoding="async"
                      />
                    ) : (
                      <div class="w-8 h-8 rounded bg-primary-100 flex items-center justify-center">
                        <span class="text-primary-600 font-bold text-sm">{other.name.charAt(0)}</span>
                      </div>
                    )}
                    <span class="text-secondary-700 hover:text-primary-600">{other.name}</span>
                  </a>
                ))}
              </div>
            </div>

            <!-- Affiliate Note -->
            <div class="p-4 rounded-lg bg-secondary-50 text-sm text-secondary-600">
              <p>
                <strong>Affiliate Disclosure:</strong> Links on this page may earn us a commission at no extra cost to you.
              </p>
            </div>
          </div>
        </aside>
      </div>
    </div>
  </article>
</Base>
