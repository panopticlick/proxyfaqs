---
export const prerender = true;

import Base from '../layouts/Base.astro';
import SearchBox from '../components/SearchBox.astro';
import QuestionCard from '../components/QuestionCard.astro';
import { searchQuestions, getPopularQuestions } from '../lib/supabase';
import { env } from '../lib/env';

const query = Astro.url.searchParams.get('q') || '';

let results: any[] = [];
let popularQuestions: any[] = [];
let searchPerformed = false;

if (query.trim()) {
  searchPerformed = true;
  try {
    results = await searchQuestions(query, 50);
  } catch (error) {
    console.error('Search error:', error);
  }
} else {
  try {
    popularQuestions = await getPopularQuestions(20);
  } catch (error) {
    console.error('Error fetching popular questions:', error);
  }
}

const title = query ? `Search: ${query}` : 'Search';
const siteUrl = env.SITE;
const pageUrl = `${siteUrl}/search`;
---

<Base
  title={title}
  description={query ? `Search results for "${query}" - Find answers about proxies and web scraping` : 'Search our knowledge base of proxy and web scraping questions'}
  canonicalUrl={pageUrl}
  noindex={true}
>
  <div class="bg-secondary-50 min-h-screen">
    <!-- Search Header -->
    <section class="bg-white border-b border-secondary-200 py-8">
      <div class="container-custom">
        <h1 class="text-2xl md:text-3xl font-bold text-secondary-900 mb-6">
          {query ? `Search results for "${query}"` : 'Search Questions'}
        </h1>
        <div class="max-w-2xl">
          <SearchBox size="md" initialValue={query} autofocus={!query} />
        </div>
      </div>
    </section>

    <!-- Results Section -->
    <section class="py-8">
      <div class="container-custom">
        {searchPerformed ? (
          results.length > 0 ? (
            <div>
              <p class="text-secondary-600 mb-6">
                Found <strong class="text-secondary-900">{results.length}</strong> results
              </p>
              <div class="grid gap-4">
                {results.map((question) => (
                  <QuestionCard question={question} />
                ))}
              </div>
            </div>
          ) : (
            <div class="text-center py-12">
              <div class="w-16 h-16 rounded-full bg-secondary-100 flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-secondary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <h2 class="text-xl font-semibold text-secondary-900 mb-2">No results found</h2>
              <p class="text-secondary-600 mb-6">
                We couldn't find any questions matching "{query}"
              </p>
              <div class="text-sm text-secondary-500">
                <p>Try:</p>
                <ul class="mt-2 space-y-1">
                  <li>• Using different keywords</li>
                  <li>• Using more general terms</li>
                  <li>• Checking your spelling</li>
                </ul>
              </div>
            </div>
          )
        ) : (
          <div>
            <h2 class="text-xl font-semibold text-secondary-900 mb-6">Popular Questions</h2>
            <div class="grid gap-4 md:grid-cols-2">
              {popularQuestions.map((question) => (
                <QuestionCard question={question} />
              ))}
            </div>
          </div>
        )}
      </div>
    </section>
  </div>
</Base>
