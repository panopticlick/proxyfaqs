---
import Base from '../layouts/Base.astro';
---

<Base
  title="Page Not Found | ProxyFAQs"
  description="The page you're looking for doesn't exist."
  noindex={true}
>
  <section
    class="min-h-screen flex items-center justify-center bg-gradient-to-b from-primary-50 via-white to-white px-4"
  >
    <div class="text-center max-w-2xl">
      <h1 class="text-8xl md:text-9xl font-bold text-primary-600 mb-4">404</h1>
      <h2 class="text-3xl font-bold text-secondary-900 mb-4">Page Not Found</h2>
      <p class="text-lg text-secondary-600 mb-8">
        The page you're looking for doesn't exist or has been moved.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-10">
        <a href="/" class="btn-primary"> Go Home </a>
        <a href="/search" class="btn-secondary"> Search Questions </a>
      </div>

      <div class="card text-left">
        <h3 class="text-xl font-semibold text-secondary-900 mb-4">Popular Resources</h3>
        <div class="grid md:grid-cols-2 gap-4 text-sm">
          <a href="/providers" class="text-primary-600 hover:underline">
            Compare Proxy Providers
          </a>
          <a href="/use-cases" class="text-primary-600 hover:underline"> Browse Use Cases </a>
          <a href="/guides" class="text-primary-600 hover:underline"> Browse Guides </a>
          <a href="/category/proxy-basics" class="text-primary-600 hover:underline">
            Proxy Basics
          </a>
          <a href="/category/web-scraping" class="text-primary-600 hover:underline">
            Web Scraping Guide
          </a>
          <a href="/category/residential-proxies" class="text-primary-600 hover:underline">
            Residential Proxies
          </a>
          <a href="/about" class="text-primary-600 hover:underline"> About ProxyFAQs </a>
        </div>
      </div>
    </div>
  </section>
</Base>
