---
import Base from '../layouts/Base.astro';
---

<Base title="Page Not Found | ProxyFAQs" description="The page you're looking for doesn't exist.">
  <div class="min-h-screen flex items-center justify-center bg-gradient-to-b from-blue-50 to-white px-4">
    <div class="text-center">
      <h1 class="text-9xl font-bold text-blue-600 mb-4">404</h1>
      <h2 class="text-3xl font-bold text-gray-900 mb-4">Page Not Found</h2>
      <p class="text-xl text-gray-600 mb-8 max-w-md mx-auto">
        The page you're looking for doesn't exist or has been moved.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
        <a
          href="/"
          class="bg-blue-600 text-white px-8 py-3 rounded-lg font-medium hover:bg-blue-700 transition-colors"
        >
          Go Home
        </a>
        <a
          href="/search"
          class="bg-white text-blue-600 px-8 py-3 rounded-lg font-medium border border-blue-600 hover:bg-blue-50 transition-colors"
        >
          Search Questions
        </a>
      </div>

      <div class="bg-white border border-gray-200 rounded-lg p-8 max-w-2xl mx-auto">
        <h3 class="text-xl font-bold text-gray-900 mb-4">Popular Resources</h3>
        <div class="grid md:grid-cols-2 gap-4 text-left">
          <a href="/providers" class="text-blue-600 hover:underline">
            Compare Proxy Providers
          </a>
          <a href="/guides" class="text-blue-600 hover:underline">
            Browse Guides
          </a>
          <a href="/category/proxy-basics" class="text-blue-600 hover:underline">
            Proxy Basics
          </a>
          <a href="/category/web-scraping" class="text-blue-600 hover:underline">
            Web Scraping Guide
          </a>
          <a href="/category/residential-proxies" class="text-blue-600 hover:underline">
            Residential Proxies
          </a>
          <a href="/about" class="text-blue-600 hover:underline">
            About ProxyFAQs
          </a>
        </div>
      </div>
    </div>
  </div>
</Base>
