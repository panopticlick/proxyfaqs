# Cloudflare Pages Configuration Template
# Copy this file to wrangler.toml and fill in your actual values
# NEVER commit wrangler.toml to git!

name = "proxyfaqs"
compatibility_date = "2024-01-01"

# Pages configuration
pages_build_output_dir = "dist"

# Environment variables (set in Cloudflare dashboard or via wrangler secret)
# DO NOT put sensitive values here - use environment variables instead
[env.production]
# Database connection (set via environment variables)
# DB_HOST = "your-db-host"
# DB_PORT = "5432"
# DB_NAME = "postgres"
# DB_USER = "postgres"
# DB_PASSWORD = "your-password"
# DB_SCHEMA = "proxyfaqs"

[env.production.vars]
SITE_URL = "https://proxyfaqs.com"
PUBLIC_SITE_URL = "https://proxyfaqs.com"

# Preview environment
[env.preview]
[env.preview.vars]
SITE_URL = "https://preview-proxyfaqs.pages.dev"
PUBLIC_SITE_URL = "https://preview-proxyfaqs.pages.dev"

# Build configuration
[build]
command = "bun run build"
cwd = ""
watch_dir = "src"

[build.upload]
format = "service-worker"
