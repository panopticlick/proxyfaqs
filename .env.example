# ProxyFAQs Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!
# Last updated: 2026-02-06

# ========================================
# Database Connection (Required)
# ========================================
POSTGRES_PASSWORD=your-secure-password-here

# Database host settings (for direct connection)
DB_HOST=supabase-db
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=${POSTGRES_PASSWORD}
DB_SCHEMA=proxyfaqs

# Full DATABASE_URL (used by app via PgBouncer)
# Format: postgres connection string with schema=proxyfaqs&pgbouncer=true
DATABASE_URL=

# ========================================
# Supabase Configuration (Required)
# ========================================
PUBLIC_SUPABASE_URL=http://supabase-kong:8000
PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_URL=http://supabase-kong:8000
SUPABASE_SERVICE_KEY=your-service-key-here

# ========================================
# Site URLs
# ========================================
SITE_URL=https://proxyfaqs.com
PUBLIC_SITE_URL=https://proxyfaqs.com

# ========================================
# AI Chat - OpenRouter (Primary)
# ========================================
# Get your API key from https://openrouter.ai/
OPENROUTER_API_KEY=your-openrouter-key-here

# Multiple keys for rotation (comma-separated, optional)
OPENROUTER_API_KEYS=key1,key2,key3

# Model selection
OPENROUTER_MODEL=meta-llama/llama-3.3-70b-instruct:free

# Fallback models (comma-separated, optional)
OPENROUTER_FALLBACK_MODELS=google/gemini-2.0-flash-exp:free,mistralai/mistral-7b-instruct:free

# ========================================
# AI Chat - VectorEngine (Fallback)
# ========================================
VECTORENGINE_API_KEY=your-vectorengine-key-here
VECTORENGINE_BASE_URL=https://api.vectorengine.ai

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_ENABLED=true

# Chat endpoint: requests per window
RATE_LIMIT_CHAT_REQUESTS=20
RATE_LIMIT_CHAT_WINDOW=60

# Search endpoint: requests per window
RATE_LIMIT_SEARCH_REQUESTS=60
RATE_LIMIT_SEARCH_WINDOW=60

# ========================================
# CORS Configuration
# ========================================
ALLOWED_ORIGINS=https://proxyfaqs.com,https://www.proxyfaqs.com,http://localhost:4321

# ========================================
# Build Configuration
# ========================================
# Chunk size for SSG page generation (larger = faster but more memory)
BUILD_CHUNK_SIZE=5000

# Enable parallel builds
BUILD_PARALLEL=true

# Limit questions in sitemap (0 = unlimited)
SITEMAP_QUESTION_LIMIT=50000

# Limit questions for SSG (0 = unlimited, useful for dev)
QUESTION_LIMIT=0

# Limit pSEO pages (0 = unlimited)
PSEO_LIMIT=0

# ========================================
# Optional: External Services
# ========================================
# Keywords Everywhere API (for keyword research)
# KEYWORDS_EVERYWHERE_API_KEY=your-key-here

# ========================================
# Development Only
# ========================================
# NODE_ENV=development
# DEBUG=true
