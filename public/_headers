# ProxyFAQs Cloudflare Pages Cache Headers
# https://developers.cloudflare.com/pages/configuration/headers/

/*
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=()

# Static assets - long cache
/_assets/*
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# Fonts - long cache
/fonts/*
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

# Images - long cache
/images/*
  Cache-Control: public, max-age=2592000, s-maxage=2592000, stale-while-revalidate=7776000

# Question pages - cache for 1 hour, stale for 7 days
/q/*
  Cache-Control: public, max-age=3600, s-maxage=86400, stale-while-revalidate=604800
  X-Frame-Options: SAMEORIGIN

# Category pages - cache for 1 hour
/category/*
  Cache-Control: public, max-age=3600, s-maxage=86400, stale-while-revalidate=604800

# Provider pages - cache for 1 hour
/providers/*
  Cache-Control: public, max-age=3600, s-maxage=86400, stale-while-revalidate=604800

# Homepage - cache for 15 minutes
/
  Cache-Control: public, max-age=900, s-maxage=3600, stale-while-revalidate=86400

# API routes - short cache (handled in code)
/api/*
  Cache-Control: public, max-age=300, s-maxage=300, stale-while-revalidate=3600
